<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/listLayout">


    <TextView
            android:text="TextView"
            android:layout_width="254dp"
            android:layout_height="22dp"
            android:id="@+id/appointmentDuration"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/startLBL3"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintBaseline_toBaselineOf="@+id/startLBL3" />

    <TextView
            android:text="Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startLBL3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/startLBL2" />

    <TextView
            android:text="TextView"
            android:layout_width="254dp"
            android:layout_height="18dp"
            android:id="@+id/appointmentEnd"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/startLBL2"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintBaseline_toBaselineOf="@+id/startLBL2" />

    <TextView
            android:text="End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startLBL2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/startLBL"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="Description of the appointment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:id="@+id/appointmentDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#2979FF"
            android:textColor="@color/white" />

    <TextView
            android:text="TextView"
            android:layout_width="254dp"
            android:layout_height="18dp"
            android:id="@+id/appointmenStart"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/startLBL"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintBaseline_toBaselineOf="@+id/startLBL" />

    <TextView
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startLBL"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/appointmentDesc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>