<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".create_appointment_activity">

    <TextView
            android:text="@string/appointment_book_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/appointmentStartTime"
            android:hint="hh:mm"
            android:textSize="12sp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/appointmentStartDate"
            app:layout_constraintHorizontal_bias="0.154"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Switch
            android:text="AM"
            android:layout_width="65dp"
            android:layout_height="34dp"
            android:id="@+id/AMPMswitch2"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/appointmentStartTime"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintBaseline_toBaselineOf="@+id/appointmentEndTime" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/appointmentOwnerName"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/owner_name"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:textSize="14sp" />

    <TextView
            android:text="Start Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/AppointmentDescription" />

    <TextView
            android:text="End Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView16" />

    <EditText
            android:layout_width="156dp"
            android:layout_height="34dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/appointmentEndDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:hint="mm/dd/yyyy"
            android:textSize="12sp" />

    <TextView
            android:text="Start Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/AppointmentDescription" />

    <Switch
            android:text="AM"
            android:layout_width="65dp"
            android:layout_height="34dp"
            android:id="@+id/AMPMswitch"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/appointmentStartTime"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/appointmentStartTime"
            app:layout_constraintHorizontal_bias="0.307" />

    <TextView
            android:text="End Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/appointmentStartDate" />

    <EditText
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/appointmentEndTime"
            android:hint="hh:mm"
            android:textSize="12sp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/appointmentEndDate"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintBaseline_toBaselineOf="@+id/appointmentEndDate" />

    <Button
            android:text="Submit"
            android:layout_width="264dp"
            android:layout_height="45dp"
            android:id="@+id/createAppointmentButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/appointmentEndDate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0"
            android:onClick="CreateNewAppointment" />

    <EditText
            android:layout_width="156dp"
            android:layout_height="34dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/appointmentStartDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:hint="mm/dd/yyyy"
            android:textSize="12sp" />

    <EditText
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/AppointmentDescription"
            android:hint="Description"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

    <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/appointmentOwnerName" />

    <TextView
            android:text="Create an Appointment"
            android:layout_width="253dp"
            android:layout_height="36dp"
            android:id="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp" />


</androidx.constraintlayout.widget.ConstraintLayout>